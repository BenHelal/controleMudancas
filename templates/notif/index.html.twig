{% extends 'base.html.twig' %}

{% block title %}Hello NotifController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 100%;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Nome de mudanças :
			{{data.nomeMudanca}}</h1>
		Descrição das mudanças:
		{{data.descMudanca}}
		<ul>
			<li>Descrição das mudanças na área impactada :
				<br><code style=" color: #007a7e;">
					{{data.descImpactoArea}}
				</code>
			</li>
			<li>
				Area impactada :
				<br>

				{% for item in area %}
					<code style="color: #007a7e;">
						{{item.name}}<br>
					</code>
				{% endfor %}
			</li>
		</ul>
	</div>

	{{ form_start(form, {'attr':{'class':'form-group'}}) }}
	<div class="row">
		<div class="col-md-12 mb-3">
			{{ form_label(form.appSectorMan) }}
			{{ form_widget(form.appSectorMan,{'attr':{'class':'form-control'}}) }}
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 mb-3">
			{{ form_label(form.comment) }}
			{{ form_widget(form.comment,{'attr':{'class':'form-control'}}) }}
		</div>
	</div>
	<div class="row">
		<div class="col-md-6 mb-3">
			<button class="	btn btn-info mt-2 text-white" style="background-color: #0c2c01; border-color: #0c2c01;">Adicionar</button>
		</div>
	</div>
	{{ form_end(form) }}
{% endblock %}
