					{% set docs = 4 %}
				{% elseif step.status == 'em andamento' or step.status == 'pendência' %}
					{% set docs = 3 %}
				{% else %}
					{% set docs = 2 %}
				{% endif %}


				{% if docs <= docsmin %}
					{% set docsmin = docs %}
				{% endif %}

			{% endfor %}

		{% else %}
			{% set docs = 1 %}

		{% endfor %}
	{% else %}
		{% set docs = 1 %}
	{% endif %}

