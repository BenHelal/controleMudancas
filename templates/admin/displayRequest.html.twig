{% extends 'baseAdmin.html.twig' %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/tom-select@2.1.0/dist/css/tom-select.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/tom-select@2.1.0/dist/js/tom-select.complete.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>

<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <center> <img class="img-profile rounded-circle" a src="{{asset('admin/img/undraw_profile.svg')}}"
                    style="width: 100px;">
                <br>
                <br>
                Nome : {{person.name}}
                <br>
                Departamento: {{person.departemant}}
                <br>
                Data de envio do pedido: {{req.date}}
                <br>
                Solicitar justificativa : {% if req.justification == null %}
                sem justificativa
                {% else %}
                {{req.justification}}
                {% endif %}
                <br>
                <br>
                <br>
            </center>
            {{ form_start(form,{'attr':{'class':'form-group', 'style':'padding-left: 20px; padding-right: 20px'}})}}
            <div class="row">
                <div class="col-md-12 mb-3">
                    {{ form_label(form.approves) }}
                    {{ form_widget(form.approves,{'attr':{'class':'form-control'}}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <button class="btn btn-info mt-2 text-white">Enviar</button>
                </div>
            </div>
            {{ form_end(form) }}




        </div>
    </div>

</div>

{% endblock %}