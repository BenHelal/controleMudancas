{% extends 'baseAdmin.html.twig' %}

{% block body %}
  <link href="https://cdn.jsdelivr.net/npm/tom-select@2.1.0/dist/css/tom-select.css"
    rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/tom-select@2.1.0/dist/js/tom-select.complete.min.js"></script>
  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" />

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>

  <script>
    // setTimeout(function () { //window.location.reload(); //}, 5000);
  </script>
  <style>
    .clicker { width:300px; height:50px; outline:none; cursor:pointer; }

    .hiddendiv{ display:none; height:400px; }

    .clicker:focus + .hiddendiv{ display:block; }
  </style>
  <div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
          lista de Mudanças
        </h6>
        <label for="exampleFormControlInput1">Procurar Mudanças</label>
        <input type="email"
          class="form-control"
          id="myInput"
          placeholder="Procurar.." />
      </div>

      <div class="clicker" tabindex="1">
        Exportar dados
      </div>
      <div class="hiddendiv">
        <form >
        <div class="row">
          <div class="col-md-4 mb-3">
            <label for="cars">Status da Aprovação :</label>
            <select name="cars" class="form-control" id="statusApp">
              <option value="null"></option>
              <option value="fechado">
                Fechado
              </option>
              <option value="aberto">
                Aberto
              </option>
            </select>
          </div>

          <div class="col-md-4 mb-3">
            <label for="cars">Período de Data Estimada de Início :</label>
            <input id="dateInicio" value=""
              type="date"
              lang="pt-BR"
              class="date form-control" />
          </div>
          <div class="col-md-4 mb-3">
            <label for="cars">Período de Data Estimada de Término :</label>
            <input id="dateTermino" value=""
              type="date"
              lang="pt-BR"
              class="date form-control" />
          </div>
        </div>

        <div class="row">
          <div class="col-md-4 mb-3">
            <label for="cars">Tipo de Aprovação :</label>
            <select  class="form-control" name="cars" id="cars">
              <option value="volvo"></option>
              <option value="volvo">
                close
              </option>
              <option value="saab">
                open
              </option>
            </select>
          </div>

          <div class="col-md-4 mb-3">
            <label for="cars">Área :</label>

            <select name="cars" class="form-control" id="cars">
              <option value="null"></option>
              {% for item in sectors %}
                <option value="{{ item.name }}">
                  {{ item.name }}
                </option>
              {% endfor %}
            </select>
          </div>

          <div class="col-md-4 mb-3">
            <label for="cars">Cliente :</label>

            <select class="form-control" name="cars" id="cars">
              <option value="null"></option>
              <option value="volvo">
                Sim
              </option>
              <option value="saab">
                Nao
              </option>
            </select>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4 mb-3">
            <label for="cars">Nome do Aprovador :</label>
            <select class="form-control" name="cars" id="cars">
              <option value="null"></option>
              {% for item in managers %}
                {% if item != null %}
                  <option value="{{ item.name }}">
                    {{ item.name }}
                  </option>
                {% endif %}
              {% endfor %}
            </select>
          </div>

          <div class="col-md-4 mb-3">
            <label for="cars">Data da Aprovação :</label>
            <input value=""
              type="date"
              lang="pt-BR"
              class="date form-control" />
          </div>

          <div class="col-md-4 mb-3">
            <label for="cars">Status da Aprovação :</label>

            <select class="form-control" name="cars" id="cars">
              <option value="volvo"></option>
              <option value="volvo">
                close
              </option>
              <option value="saab">
                open
              </option>
            </select>
            <div class="col-md-12 mb-3">
              <label for="cars">Comentário :</label>
              <input value="" class="form-control" />
            </div>
            <a href="{{ path('export') }}">Export</a>
          </div>
        </div>
        </form>
      </div>


      <div class="card-body">
        <div class="table-responsive">
          {% if mudancas != null %}
            {% for m in mudancas %}
              <div id="myTable" class="list-group" style="width: 100%;">
                <div class="row" style="width: 100%;">
                  <a href="{{
                    path(
                      'mudAdmin',
                      {
                        id: m.id
                      }
                    )
                    }}"
                    class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                      <h5 class="mb-1">
                        Número da mudança:
                        {{ m.id }}
                      </h5>
                      <medium>
                        Nome da mudança:
                        {{ m.nomeMudanca }}
                      </medium>
                    </div>
                    <div class="d-flex w-100 justify-content-between">
                      <p class="mb-1">
                        Descrição da Mudança:
                        {{ m.descImpacto }}
                      </p>
                      <medium>
                        Descrição do Impacto:
                        {{ m.descImpacto }}
                      </medium>
                    </div>
                    <div class="d-flex w-100 justify-content-between">
                      <medium>
                        Área impactada:
                      </medium>
                      <medium></medium>
                    </div>
                  </a>
                </div>
              </div>
            {% endfor %}
          {% else %}
            Não há Mudanças acessíveis
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <script>
    $(document).ready(function () { $("#myInput").on("keyup", function () {

    var value = $(this).val().toLowerCase(); // console.log(value);

    $("#myTable a").filter(function () {
    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1) }); }); });
  </script>
{% endblock %}
