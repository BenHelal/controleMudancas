{% extends 'baseAdmin.html.twig' %}

{% block body %}
	<link href="https://cdn.jsdelivr.net/npm/tom-select@2.1.0/dist/css/tom-select.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/tom-select@2.1.0/dist/js/tom-select.complete.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>

	<div
		class="container-fluid">

		<!-- DataTales Example -->
		<div class="card shadow mb-4">
			<div class="card-header py-3">
				<a href="{{path('ep',{'id':person.id} )}}" style="margin-left : 15px">Editar
					{{person.name}}</a>
				<center>
					<img class="img-profile rounded-circle" a src="{{asset('admin/img/undraw_profile.svg')}}" style="width: 100px;">
					<br>
					<br>
					Nome :
					{{person.name}}
					<br>
					Ultima conexão:
					{{person.lastConnection}}
					<br>
					Departamento:
					{{person.departemant}}
					<br>
					Permissão :
					{% if person.permission == null %}
						sem permissão
					{% else %}
						{{person.permission}}
					{% endif %}
					<br>
					<medium>Função:
						{% if person.function == null %}
							sem Função
						{% else %}
							<a href="{{path('edit_sector',{'id':person.function.id} )}}">
								{{person.function.name}}</a>
						{% endif %}
					</medium>
					<br>
					<br>
				</center>
				{{ form_start(form,{'attr':{'class':'form-group', 'style':'padding-left: 20px; padding-right: 20px'}})}}
				<div class="row">
					<div class="col-md-12 mb-3">
						{{ form_label(form.permission) }}
						{{ form_widget(form.permission,{'attr':{'class':'form-control'}}) }}
					</div>
				</div>
				<div class="row">
					<div class="col-md-12 mb-3">
						{{ form_label(form.role) }}
						{{ form_widget(form.role,{'attr':{'class':'form-control'}}) }}
					</div>
				</div>
				<div class="row">
					<div class="col-md-1 mb-1">
						<button class="btn btn-info mt-2 text-white">Enviar</button>
					</div>

					<div class="col-md-1 mb-3">
						<a class="btn btn-info mt-2 text-white" data-toggle="modal" data-target="#delModal">
							<span>Excluir</span>
						</a>
					</div>
				</div>
				{{ form_end(form) }}


			</div>
		</div>

	</div>
	<!-- Logout Modal-->
	<div class="modal fade" id="delModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">você tem certeza sobre excluir?</h5>
					<button class="close" type="button" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">×</span>
					</button>
				</div>
				<div class="modal-body">Selecione "Excluir" abaixo se estiver pronto para excluir.</div>
				<div class="modal-footer">
					<button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
					<a class="btn btn-primary" href="{{path('delperson',{'id':person.id} )}}">Excluir</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
